{
  "extends": [
    "config:js-lib",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "packageNames": ["husky"],
      "allowedVersions": "<6.0"
    },
    {
      "packageNames": ["semantic-release"],
      "allowedVersions": "<18.0"
    },
    {
      "packageNames": ["node-fetch"],
      "allowedVersions": "<3.0"
    },
    {
      "packageNames": ["figures"],
      "allowedVersions": "<4.0"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
